<!DOCTYPE html>
<html>
<head>
  <title>Oyamap</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
      <div class="container">
        <ul class="nav navbar-nav">
          <li class="nav-item active">
            <%= link_to 'おやマップ', root_path, class: 'nav-link' %>
          </li>
          <% if user_signed_in? %>
                <li class="nav-item"><%= link_to '設定変更', edit_user_registration_path, class: 'nav-link' %></li>
                <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path, class: 'nav-link', method: :delete %></li>
                <li class="nav-item"><%= link_to '登録スポット一覧', maps_path, class: 'nav-link' %></li>
                <li class="nav-item"><%= link_to 'スポット登録', new_map_path, class: 'nav-link' %></li>
          <% elsif admin_user_signed_in? %>
                <li class="nav-item"><%= link_to 'ログアウト', destroy_admin_user_session_path, class: 'nav-link', method: :delete %></li>
                <li class="nav-item"><%= link_to 'Rails Admin', rails_admin_path, class: 'nav-link' %></li>
          <% else %>
                <li class="nav-item"><%= link_to 'サインアップ', new_user_registration_path, class: 'nav-link' %></li>
                <li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %></li>
                <li class="nav-item"><%= link_to '管理者ログイン', new_admin_user_session_path, class: 'nav-link' %></li>
          <% end %>
        </ul>
      </div>
</nav>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<div class="container main-container">
      <%= yield %>
</div>
</body>
</html>
