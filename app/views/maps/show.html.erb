<p id="notice"><%= notice %></p>

<p>
  <strong>スポット名</strong>
  <%= @map.title %>
</p>

<p>
  <strong>緯度</strong>
  <%= @map.latitude %>
</p>

<p>
  <strong>経度</strong>
  <%= @map.longitude %>
</p>

<p>
  <strong>住所</strong>
  <%= @map.address %>
</p>

<p>
  <strong>概要</strong>
  <%= simple_format(@map.body) %>
</p>

<p>
  <strong>Image:</strong><br />
  <%= image_tag @map.image,:size => "480x360" %>
</p>

<div id="map">
  </div>
  <style type="text/css">
    #map {
      height:450px;
    }
  </style>
    <script type="text/javascript">
        L.Icon.Default.imagePath = "/assets";
        <%= lat = @map.latitude %>
        <%= lon = @map.longitude %>
        var map = L.map('map').setView([<%= lat %>,<%= lon %>],17);
        var osmUrl = "https://cyberjapandata.gsi.go.jp/xyz/ort/{z}/{x}/{y}.jpg";
        var osmAttrib = "Map data &COPY; OpenStreetMap contributors";
        L.tileLayer(osmUrl, {
          attribution: osmAttrib,
          maxZoom: 20,
        }).addTo(map);
        var marder = L.marker([<%= lat %>,<%= lon %>]).addTo(map);
    </script>
    <br>
<%= link_to 'Edit', edit_map_path(@map) %> |
<%= link_to 'Back', maps_path %> | <%= link_to 'Delete',@map,method: :delete, data: { confirm: '本当に削除してよろしいですか？' } ,class:'btn btn-danger'%>
