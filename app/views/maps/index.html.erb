<div class="row">
<div class="row-sm-12">
    <div id="map"></div>
    <script type="text/javascript">
          L.Icon.Default.imagePath = "/assets";
          var map = L.map('map').setView([39.099388, 141.079960],17);
          var osmUrl = "https://cyberjapandata.gsi.go.jp/xyz/ort/{z}/{x}/{y}.jpg";
          var osmAttrib = "Map data &COPY; OpenStreetMap contributors";
          L.tileLayer(osmUrl, {
             attribution: osmAttrib,
             maxZoom: 20,
          }).addTo(map);
    </script>
    <% @maps.each do |map| %>
    <script type="text/javascript">       
        var popup = L.popup().setContent('<%= simple_format(h(map.title)) %><%= link_to '詳細', map %>');
        var marker = L.marker(
        [<%= map.latitude %>,<%= map.longitude %>],
        { title: map.title }
        ).addTo(map)
        .bindPopup(popup);
                  
    </script>
<% end %>

    <br>
<%= link_to 'スポット新規登録', new_map_path ,class: 'btn btn-primary'%>
</div>
</div>